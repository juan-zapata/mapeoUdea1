<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBECF1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="418dp"
        android:layout_height="772dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:background="#00F47236"
                app:srcCompat="@drawable/googlemaps" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_sitios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="#E93F51B5"
            android:text="sedes UdeA" />

        <Button
            android:id="@+id/btn_ciudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00796B"
            android:text="Mapa Ciudad Universitaria" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="431dp"
            android:layout_height="297dp"
            app:srcCompat="@drawable/udea" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>